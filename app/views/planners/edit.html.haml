= render partial: "projects/header"
.mypage__edit
  .edit__left
    .mypage__left__box
      - if current_planner.image.present?
        = image_tag("#{@planner.image}", class: "mypage__image", size: "175x175")
      - else
        = image_tag("icon_yellow.png", class: "mypage__image", size: "175x175")
    .mypage__edit__name #{@hold_planner.name}
    .mypage__main__left
      .mypage__border
      .mypage__menu__title
        = image_tag("black-people.png", class: "mypage__menu__title-image")
        .mypage__menu__title-text サポーター
      .mypage__inbox
        .mypage__menu
          = link_to "支援したプロジェクト", "", class: "mypage__menu__body"
          = link_to ">", "", class: "mypage__menu__icon"
      .mypage__inbox
        .mypage__menu
          = link_to "購入履歴(ストア)", "", class: "mypage__menu__body"
          = link_to ">", "", class: "mypage__menu__icon"
      .mypage__inbox.inbox__last
        .mypage__menu
          = link_to "メッセージ", "", class: "mypage__menu__body"
          = link_to ">", "", class: "mypage__menu__icon"
      .mypage__border
      .mypage__menu__title
        = image_tag("men.gif", class: "mypage__menu__title-image")
        .mypage__menu__title-text アカウント情報
      .mypage__inbox
        .mypage__menu
          = link_to "プロフィール編集", edit_planner_path, class: "mypage__menu__body"
          = link_to ">", edit_planner_path, class: "mypage__menu__icon"
      .mypage__inbox.inbox__last
        .mypage__menu
          = link_to "メール通知設定", "", class: "mypage__menu__body"
          = link_to ">", "", class: "mypage__menu__icon"
      .mypage__menu__title
        .mypage__menu__title-text{style: "margin: 13px 0 0 12px;"} セキュリティについて
      .security__box
        .security__text 当サイトはSSL暗号化通信に対応しておりますので、入力した情報は安全に送信されます。
        = image_tag("siteSealImage.gif", class: "security__image")
  .edit__right
    .mypage__main__right
      .right__title
        %h2 企画者情報編集
      = form_for (@planner), url: planner_path do |f|
        .profile__field
          .profile__field__text 企画者名
          .profile__field__box
            = f.text_field :name, class: 'profile__field__box-form', placeholder: '例）若松大輔'
            - if @planner.errors.full_messages_for(:name).any?
              .profile__error 企画者名を入力してください。
        .profile__field
          .profile__field__text イメージ写真
          .profile__field__box
            = f.file_field :image, class: 'profile__field__box-form'
        .profile__field
          .profile__field__text メールアドレス
          .profile__field__box
            = f.text_field :email, class: 'profile__field__box-form'
          - if @planner.errors.full_messages_for(:email).any?
            .post__error メールアドレスを入力してください。
        .profile__field
          .profile__field__text パスワード
          .profile__field__box
            = link_to "編集", password_planner_path, class: "profile__pass__edit"
        .profile__field
          .profile__field__text 現在地
          .profile__field__box
            = f.text_field :location, class: 'profile__field__box-form'
        .profile__field
          .profile__field__text 誕生日
          .profile__field__box
            = f.text_field :birthday, class: 'profile__field__box-form'
        .profile__submit
          = f.submit "変更する", class: "profile__submit__btn"
= render partial: "projects/footer"

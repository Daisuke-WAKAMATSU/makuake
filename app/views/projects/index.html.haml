= render partial: "header"
.main
  #carousel-example.carousel.slide{data: {ride: "carousel"}}
    .main__under-bar 
      %ol.carousel-indicators
        %li.active{data: {target: "#carousel-example",slide_to: "0"}}
        %li{data: {target: "#carousel-example", slide_to: "1"}}
        %li{data: {target: "#carousel-example", slide_to: "2"}}
        %li{data: {target: "#carousel-example", slide_to: "3"}}
        %li{data: {target: "#carousel-example", slide_to: "4"}}
        / .test__none{data: {target: "#carousel-example",slide_to: "0"}}
        /   %img.test__image.active{src: "assets/5.jpg"}
        / .test__none{data: {target: "#carousel-example", slide_to: "1"}}
        /   %img.test__image.active{src: "assets/2.jpg"}
        / .test__none{data: {target: "#carousel-example", slide_to: "2"}}
        /   %img.test__image.active{src: "assets/3.jpg"}
        / .test__none{data: {target: "#carousel-example", slide_to: "3"}}
        /   %img.test__image.active{src: "assets/4.jpg"}
        / .test__none{data: {target: "#carousel-example", slide_to: "4"}}
        /   %img.test__image.active{src: "assets/1.jpg"}
    .carousel-inner
      .item.active
        = image_tag("5.jpg", class: "full__width")
      .item
        = image_tag("2.jpg", class: "full__width")
      .item
        = image_tag("3.jpg", class: "full__width")
      .item
        = image_tag("4.jpg", class: "full__width")
      .item
        = image_tag("1.jpg", class: "full__width")
  .contents
    .catch-copy
      %h1.catch-copy-top 新たなチャレンジを応援しよう。
      %h2.catch-copy-bottom 世の中を良くする新しいチャレンジが毎日続々と登場。
    = render partial: "index_recommend"
    = render partial: "index_ranking"
= render partial: "footer"

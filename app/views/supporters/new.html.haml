.header
  .inbox
    = link_to "/" do
      = image_tag("makuake-logo.png", class: "inbox__logo")
.main
  .main__investment
    %ul.investment__header
      %li.investment__header-list  1.支払方法の選択
      %li.investment__header-list.list-select 2.お届け先の入力
      %li.investment__header-list 3.申込み内容の確認
      %li.investment__header-list.list-last 4.完了
    .investment__menu
      %h2.investment__menu__title お届け先情報をご入力ください
      .investment__menu__text 
        Makuakeサイトで取得した情報の取り扱いに関する
        = link_to "プライバシーポリシー", "", class: "investment__menu__text-link"
        について
    .investment__detail
      .post__form
        = form_for (@supporter), url: project_investment_supporters_path do |f|
          .post__field
            .post__field__text 名前
            = f.text_field :name, class: 'post__field__box form-short', placeholder: '例）若松大輔'
          .post__field
            .post__field__text 性別
            .radio__field
              %label
                男
                = f.radio_button :gender, "男"
              %label
                女
                = f.radio_button :gender, "女"
          .post__field
            .post__field__text 誕生日
            = f.text_field :birthday, class: 'post__field__box form-short', placeholder: '例）1986-12-22', maxlength: "10"
          .post__field
            .post__field__text 電話番号
            = f.text_field :mobile, class: 'post__field__box form-short', placeholder: '例）09012345678', maxlength: "11"
          .post__field
            .post__field__text 郵便番号
            = f.text_field :postal_code, class: 'post__field__box form-short', placeholder: '例）3350005', maxlength: "7"
          .post__field
            .post__field__text 都道府県
            = f.text_field :region, class: 'post__field__box form-short', placeholder: '例）埼玉県'
          .post__field
            .post__field__text 市町村
            = f.text_field :city, class: 'post__field__box form-short', placeholder: '例）豊田市深見町'
          .post__field
            .post__field__text 番地
            = f.text_field :block, class: 'post__field__box form-short', placeholder: '例）1287-49'
          .post__field
            .post__field__text 建物名
            = f.text_field :building, class: 'post__field__box form-short', placeholder: '例）メゾン305号室'
          .btn__field
            = f.submit "投稿する", class: "next__btn"

= render partial: "projects/header"
.mypage__edit
  .edit__left
    .mypage__left__box
      - if current_user.image == nil
        = image_tag("icon_yellow.png", class: "mypage__image", size: "175x175")
      - else
        = image_tag("#{@user.image}", class: "mypage__image", size: "175x175")
    .mypage__edit__name #{@hold_user.username}
    .mypage__main
      .mypage__main__left
        .mypage__border
        .mypage__menu__title
          = image_tag("black-people.png", class: "mypage__menu__title-image")
          .mypage__menu__title-text サポーター
        .mypage__inbox
          .mypage__menu
            = link_to "支援したプロジェクト", "", class: "mypage__menu__body"
            = link_to ">", "", class: "mypage__menu__icon"
        .mypage__inbox
          .mypage__menu
            = link_to "購入履歴(ストア)", "", class: "mypage__menu__body"
            = link_to ">", "", class: "mypage__menu__icon"
        .mypage__inbox.inbox__last
          .mypage__menu
            = link_to "メッセージ", "", class: "mypage__menu__body"
            = link_to ">", "", class: "mypage__menu__icon"
        .mypage__border
        .mypage__menu__title
          = image_tag("men.gif", class: "mypage__menu__title-image")
          .mypage__menu__title-text アカウント情報
        .mypage__inbox
          .mypage__menu
            = link_to "プロフィール編集", edit_user_path, class: "mypage__menu__body"
            = link_to ">", edit_user_path, class: "mypage__menu__icon"
        .mypage__inbox.inbox__last
          .mypage__menu
            = link_to "メール通知設定", "", class: "mypage__menu__body"
            = link_to ">", "", class: "mypage__menu__icon"
        .mypage__menu__title
          .mypage__menu__title-text{style: "margin: 13px 0 0 12px;"} セキュリティについて
        .security__box
          .security__text 当サイトはSSL暗号化通信に対応しておりますので、入力した情報は安全に送信されます。
          = image_tag("siteSealImage.gif", class: "security__image")
  .edit__right
    .mypage__main__right
      .right__title
        %h2 プロフィール編集
      = form_for (@user), url: user_path do |f|
        .profile__field 
          .post__field__text ユーザー名
          = f.text_field :username, class: '', placeholder: '例）若松大輔'
          - if @user.errors.full_messages_for(:username).any?
            .post__error 名前を入力してください。
        .profile__field 
          .post__field__text プロフィール写真
          = f.file_field :image, class: ''
        .profile__field 
          .post__field__text メールアドレス
          = f.text_field :email, class: ''
          - if @user.errors.full_messages_for(:email).any?
            .post__error メールアドレスを入力してください。
        .profile__field 
          .post__field__text パスワード
          = f.password_field :password, class: ''
          - if @user.errors.full_messages_for(:password).any?
            .post__error パスワードを入力してください。
        .btn__field
          = f.submit "確認する", class: "support__submit next__btn", id: "support__submit"
= render partial: "projects/footer"
